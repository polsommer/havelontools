{
	if ((!isMob (self)) || (isPlayer (self)))
		detachScript(self, "conversation.ep3_kachirho_rawarok");

	setCondition (self, CONDITION_CONVERSABLE);

	return SCRIPT_CONTINUE;
}

trigger OnAttach ()
{
	setCondition (self, CONDITION_CONVERSABLE);

	return SCRIPT_CONTINUE;
