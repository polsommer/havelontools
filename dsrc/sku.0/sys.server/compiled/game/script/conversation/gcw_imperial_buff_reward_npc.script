trigger OnStartNpcConversation (obj_id player)
{
	obj_id npc = self;

	if (ai_lib.isInCombat (npc) || ai_lib.isInCombat (player))
		return SCRIPT_OVERRIDE;

	//-- [NOTE] 
	if (gcw_imperial_buff_reward_npc_condition_playerImperial (player, npc))
	{
		doAnimationAction (npc, "salute2");

		doAnimationAction (player, "salute2");

		//-- NPC: Greetings soldier! I'm in charge of supplies for our battle weary troopers. I have several orders en route and the longer you can keep the Rebel scum out of here, the more supplies will become available.
		string_id message = new string_id (c_stringFile, "s_4");
		int numberOfResponses = 0;

		boolean hasResponse = false;

		//-- PLAYER: I understand sir, what's in stock right now?
		boolean hasResponse0 = false;
		if (gcw_imperial_buff_reward_npc_condition__defaultCondition (player, npc))
		{
			++numberOfResponses;
			hasResponse = true;
			hasResponse0 = true;
		}

		//-- PLAYER: I understand sir; I will do my best in aiding the defenses!
		boolean hasResponse1 = false;
		if (gcw_imperial_buff_reward_npc_condition__defaultCondition (player, npc))
		{
			++numberOfResponses;
			hasResponse = true;
			hasResponse1 = true;
		}

		if (hasResponse)
		{
			int responseIndex = 0;
			string_id responses [] = new string_id [numberOfResponses];

			if (hasResponse0)
				responses [responseIndex++] = new string_id (c_stringFile, "s_6");

			if (hasResponse1)
				responses [responseIndex++] = new string_id (c_stringFile, "s_10");

			utils.setScriptVar (player, "conversation.gcw_imperial_buff_reward_npc.branchId", 1);

			npcStartConversation (player, npc, "gcw_imperial_buff_reward_npc", message, responses);
		}
		else
		{
			chat.chat (npc, player, message);
		}

		return SCRIPT_CONTINUE;
	}

	//-- [NOTE] 
	if (gcw_imperial_buff_reward_npc_condition__defaultCondition (player, npc))
	{
		//-- NPC: Move along, citizen. This is not the place for a civilian!
		string_id message = new string_id (c_stringFile, "s_14");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	chat.chat (npc, "Error:  All conditions for OnStartNpcConversation were false.");

	return SCRIPT_CONTINUE;
}

