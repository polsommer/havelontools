	{
		doAnimationAction (player, "nod");

		//-- [NOTE] 
		if (gcw_imperial_buff_reward_npc_condition__defaultCondition (player, npc))
		{
			//-- NPC: Let me show you my current inventory. < Pop up SUI here >
			string_id message = new string_id (c_stringFile, "s_8");
			utils.removeScriptVar (player, "conversation.gcw_imperial_buff_reward_npc.branchId");

			npcEndConversationWithMessage (player, message);

			return SCRIPT_CONTINUE;
		}

	}

	//-- [RESPONSE NOTE] 
	//-- PLAYER: I understand sir; I will do my best in aiding the defenses!
	if (response == "s_10")
	{
		//-- [NOTE] 
		if (gcw_imperial_buff_reward_npc_condition__defaultCondition (player, npc))
		{
			doAnimationAction (npc, "salute2");

			doAnimationAction (player, "salute2");

			//-- NPC: Sounds good soldier, for the Emperor!
			string_id message = new string_id (c_stringFile, "s_12");
			utils.removeScriptVar (player, "conversation.gcw_imperial_buff_reward_npc.branchId");

			npcEndConversationWithMessage (player, message);

			return SCRIPT_CONTINUE;
		}

	}

	return SCRIPT_DEFAULT;
}

