int survivor_02_handleBranch1 (obj_id player, obj_id npc, string_id response)
{
	//-- [BRANCH NOTE] 
	//-- NPC: That was close. Thanks for rescuing me! I owe you.

	//-- [RESPONSE NOTE] 
	//-- PLAYER: Glad to have been of service.
	if (response == "s_7")
	{
		//-- [NOTE] 
		if (survivor_02_condition__defaultCondition (player, npc))
		{
			doAnimationAction (npc, "bow2");

			survivor_02_action_creditPlayer (player, npc);

			//-- NPC: I will tell HX-138 of my arrival.
			string_id message = new string_id (c_stringFile, "s_8");
			utils.removeScriptVar (player, "conversation.survivor_02.branchId");

			npcEndConversationWithMessage (player, message);

			return SCRIPT_CONTINUE;
		}

	}

	return SCRIPT_DEFAULT;
}

