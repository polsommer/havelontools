trigger OnStartNpcConversation (obj_id player)
{
	if (ai_lib.isInCombat (self) || ai_lib.isInCombat (player))
		return SCRIPT_OVERRIDE;

	//-- [NOTE] 
	if (!bestine_rumor01_condition_nonoffice (player, self))
	{
		//-- NPC: If you care about the state of Bestine, then you should vote for one of the new candidates. You can go to the capitol and speak with the governor for more information. The winner of the election will reflect on Bestine, so choose wisely.
		string_id message = new string_id (c_stringFile, "s_a886b683");
		chat.chat (self, message);

		return SCRIPT_CONTINUE;
	}

	//-- [NOTE] 
	if (bestine_rumor01_condition_nonoffice (player, self))
	{
		//-- NPC: I hear there's been way too many attacks on Bestine by the Sand People. It's really hurting our economy.
		string_id message = new string_id (c_stringFile, "s_b1225bbd");
		chat.chat (self, message);

