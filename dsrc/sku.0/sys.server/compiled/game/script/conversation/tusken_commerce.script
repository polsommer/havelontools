trigger OnStartNpcConversation (obj_id player)
{
	obj_id npc = self;

	if (ai_lib.isInCombat (npc) || ai_lib.isInCombat (player))
		return SCRIPT_OVERRIDE;

	//-- [NOTE] 
	if (tusken_commerce_condition_staffed (player, npc))
	{
		//-- NPC: The credits are flowing. Blasters, beans and fresh bodies are already in route.
		string_id message = new string_id (c_stringFile, "s_4");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	//-- [NOTE] 
	if (tusken_commerce_condition__defaultCondition (player, npc))
	{
		doAnimationAction (npc, "pose_proudly");

		//-- NPC: I have some contacts on the outside. Get a few more brokers in here and we'll get the help we need.
		string_id message = new string_id (c_stringFile, "s_6");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	chat.chat (npc, "Error:  All conditions for OnStartNpcConversation were false.");

	return SCRIPT_CONTINUE;
}

