trigger OnStartNpcConversation (obj_id player)
{
	obj_id npc = self;

	if (ai_lib.isInCombat (npc) || ai_lib.isInCombat (player))
		return SCRIPT_OVERRIDE;

	//-- [NOTE] 
	if (itp_emperor_merc_leader_condition_emperorTask02Active (player, npc))
	{
		itp_emperor_merc_leader_action_emperor02Signal (player, npc);

		//-- NPC: You have the disk? Good. Let the Emperor know that I am prepared to do his bidding.
		string_id message = new string_id (c_stringFile, "s_5");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	//-- [NOTE] 
	if (itp_emperor_merc_leader_condition_emperorTaskActive (player, npc))
	{
		itp_emperor_merc_leader_action_emperorSignal (player, npc);

		//-- NPC: The Emperor sent you? I understand his wishes. But first you need to retrieve a datadisk from a Rebel base on Dantooine. Return after you have it and after it has been altered by an Imperial operative in Kaadara.
		string_id message = new string_id (c_stringFile, "s_32");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	//-- [NOTE] 
	if (itp_emperor_merc_leader_condition__defaultCondition (player, npc))
	{
		//-- NPC: What are you doing in here? Security!
		string_id message = new string_id (c_stringFile, "s_34");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	chat.chat (npc, "Error:  All conditions for OnStartNpcConversation were false.");

	return SCRIPT_CONTINUE;
}

