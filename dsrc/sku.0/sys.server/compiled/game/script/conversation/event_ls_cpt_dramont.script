int event_ls_cpt_dramont_handleBranch1 (obj_id player, obj_id npc, string_id response)
{
	//-- [BRANCH NOTE] 
	//-- NPC: We're very busy trying to find Niles Ferrier, what can I do for you?

	//-- [RESPONSE NOTE] 
	//-- PLAYER: I want to help look for the stolen ships.
	if (response == "s_6")
	{
		//-- [NOTE] 
		if (event_ls_cpt_dramont_condition__defaultCondition (player, npc))
		{
			doAnimationAction (npc, "explain");

			//-- NPC: Excellent. We know he's hiding ships on Dathomir, Yavin 4 and Endor. We've pinpointed two regions per planet, but he only leaves a ship in one spot for two to five hours. We need you to find them.
			string_id message = new string_id (c_stringFile, "s_8");
			int numberOfResponses = 0;

			boolean hasResponse = false;

			//-- PLAYER: What do I do if I find one?
			boolean hasResponse0 = false;
			if (event_ls_cpt_dramont_condition__defaultCondition (player, npc))
			{
				++numberOfResponses;
				hasResponse = true;
				hasResponse0 = true;
			}

			if (hasResponse)
			{
				int responseIndex = 0;
				string_id responses [] = new string_id [numberOfResponses];

				if (hasResponse0)
					responses [responseIndex++] = new string_id (c_stringFile, "s_10");

				utils.setScriptVar (player, "conversation.event_ls_cpt_dramont.branchId", 2);

				npcSpeak (player, message);
				npcSetConversationResponses (player, responses);
			}
			else
			{
				utils.removeScriptVar (player, "conversation.event_ls_cpt_dramont.branchId");

				chat.chat (npc, player, message);
				npcEndConversation (player);
			}

			return SCRIPT_CONTINUE;
		}

	}

	//-- [RESPONSE NOTE] 
	//-- PLAYER: Where should I look for the stolen ships?
	if (response == "s_18")
	{
		//-- [NOTE] 
		if (event_ls_cpt_dramont_condition__defaultCondition (player, npc))
		{
			doAnimationAction (npc, "nod");

			//-- NPC: Dathomir, Yavin 4 and Endor. We have informants at each of the starports except the Imperial Base on Yavin 4. They can give you a clue about where to look in that region.
			string_id message = new string_id (c_stringFile, "s_20");
			utils.removeScriptVar (player, "conversation.event_ls_cpt_dramont.branchId");

			chat.chat (npc, player, message);
			npcEndConversation (player);

			return SCRIPT_CONTINUE;
		}

	}

	//-- [RESPONSE NOTE] 
	//-- PLAYER: I have Navigational Cores for you.
	if (response == "s_22")
	{
		//-- [NOTE] 
		if (!event_ls_cpt_dramont_condition_hasSixCores (player, npc))
		{
			doAnimationAction (npc, "huh");

			//-- NPC: You don't have a core from all six regions. We need all six if we want to catch Ferrier. Come back if you ever manage to find a complete set.
			string_id message = new string_id (c_stringFile, "s_24");
			utils.removeScriptVar (player, "conversation.event_ls_cpt_dramont.branchId");

			chat.chat (npc, player, message);
			npcEndConversation (player);

			return SCRIPT_CONTINUE;
		}

		//-- [NOTE] 
		if (event_ls_cpt_dramont_condition_outOfRewards (player, npc))
		{
			doAnimationAction (npc, "shake_head_no");

			//-- NPC: I'm sorry, but you're too late. We already have all the navigational cores we need. Better luck next time.
			string_id message = new string_id (c_stringFile, "s_26");
			int numberOfResponses = 0;

			boolean hasResponse = false;

			//-- PLAYER: A lot of work went into this, Don't you have anything for me?
			boolean hasResponse0 = false;
			if (event_ls_cpt_dramont_condition__defaultCondition (player, npc))
			{
				++numberOfResponses;
				hasResponse = true;
				hasResponse0 = true;
			}

			if (hasResponse)
			{
				int responseIndex = 0;
				string_id responses [] = new string_id [numberOfResponses];

				if (hasResponse0)
					responses [responseIndex++] = new string_id (c_stringFile, "s_28");

				utils.setScriptVar (player, "conversation.event_ls_cpt_dramont.branchId", 7);

				npcSpeak (player, message);
				npcSetConversationResponses (player, responses);
			}
			else
			{
				utils.removeScriptVar (player, "conversation.event_ls_cpt_dramont.branchId");

				chat.chat (npc, player, message);
				npcEndConversation (player);
			}

			return SCRIPT_CONTINUE;
		}

		//-- [NOTE] 
		if (event_ls_cpt_dramont_condition_hasSixCores (player, npc))
		{
			doAnimationAction (npc, "nod");

			//-- NPC: Excellent! This will help greatly. As for the finders fee, we can give you one of the ships that we confiscated. It doesn't work, but it will make a great city decoration. Which do you want?
			string_id message = new string_id (c_stringFile, "s_32");
			int numberOfResponses = 0;

			boolean hasResponse = false;

			//-- PLAYER: I'll take a Tie Bomber decoration.
			boolean hasResponse0 = false;
			if (event_ls_cpt_dramont_condition__defaultCondition (player, npc))
			{
				++numberOfResponses;
				hasResponse = true;
				hasResponse0 = true;
			}

			//-- PLAYER: I'll take an X-Wing City decoration.
			boolean hasResponse1 = false;
			if (event_ls_cpt_dramont_condition__defaultCondition (player, npc))
			{
				++numberOfResponses;
				hasResponse = true;
				hasResponse1 = true;
			}

			if (hasResponse)
			{
				int responseIndex = 0;
				string_id responses [] = new string_id [numberOfResponses];

				if (hasResponse0)
					responses [responseIndex++] = new string_id (c_stringFile, "s_34");

				if (hasResponse1)
					responses [responseIndex++] = new string_id (c_stringFile, "s_46");

				utils.setScriptVar (player, "conversation.event_ls_cpt_dramont.branchId", 9);

				npcSpeak (player, message);
				npcSetConversationResponses (player, responses);
			}
			else
			{
				utils.removeScriptVar (player, "conversation.event_ls_cpt_dramont.branchId");

				chat.chat (npc, player, message);
				npcEndConversation (player);
			}

			return SCRIPT_CONTINUE;
		}

	}

	return SCRIPT_DEFAULT;
