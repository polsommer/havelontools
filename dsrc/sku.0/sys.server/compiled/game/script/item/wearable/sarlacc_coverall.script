//------------------------------------------------
// Includes
//------------------------------------------------

include library.utils;

//------------------------------------------------
// OnAttach
//------------------------------------------------

trigger OnAttach()
{
	// Give us a skill mod.
	setSkillModBonus( self, "resistance_disease", 25 );

	// Destroy us after a while.
	messageTo( self, "destroyCoverall", null, 86400, true );

	return SCRIPT_CONTINUE;
}

//------------------------------------------------
// destroyCoverall
//------------------------------------------------

messageHandler destroyCoverall()
{
	destroyObject( self );

	return SCRIPT_CONTINUE;
}