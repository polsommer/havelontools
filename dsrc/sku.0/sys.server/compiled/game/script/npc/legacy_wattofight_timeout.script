/***** INCLUDES ********************************************************/

include library.ai_lib;

/***** CONSTANTS *******************************************************/

/***** TRIGGERS ********************************************************/

trigger OnAttach()
{
	messageTo (self, "msgCheckCombat", null, 30, false);

	return SCRIPT_CONTINUE;
}

/***** MESSAGEHANDLERS *************************************************/

messageHandler msgCheckCombat()
{
	if(!isIncapacitated(self) || !isDead(self) || !ai_lib.isInCombat(self))
	{
		destroyObject(self);
	}
	
	return SCRIPT_CONTINUE;
}	

/***** COMMANDHANDLERS *************************************************/

/***** FUNCTIONS *******************************************************/

